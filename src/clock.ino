      leds[(17 - position) * 17 + (16 - x)].setRGB(0, 0, pow(gFont2[number][1 * 17 + x], 3) * 31);
      leds[(18 + position) * 17 + x].setRGB(0, 0, pow(gFont2[number][2 * 17 + x], 3) * 31);
    }
  }
}

