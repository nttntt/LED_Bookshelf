    displayNumber2(y % 10, 7);
    displayNumber2(mo / 10, 8);
    displayNumber2(mo % 10, 9);
    displayNumber2(d / 10, 10);
    displayNumber2(d % 10, 11);
  }
}

void displayNumber(uint8_t number, uint8_t position)
{
  for (uint8_t y = 0; y < 5; ++y)
  {
    for (uint8_t x = 0; x < 3; ++x)
    {
      if (gFont[number][y * 3 + x] == 1)
      {
        gLEDBuffer = CRGB(0, 0, 255);
      }
      else
      {
        gLEDBuffer = CRGB(0, 0, 0);
      }
      drawByHalfBlock((uint8_t)(position * 5 + x + 4), (uint8_t)(y + 2));
    }
  }
}
