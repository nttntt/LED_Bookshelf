    prev_s = s;
    uint16_t y = timeInfo.tm_year + 1900;
    uint8_t mo = timeInfo.tm_mon + 1;
    uint8_t d = timeInfo.tm_mday;
    uint8_t h = timeInfo.tm_hour;
